/*

 * * * * * * * * * 
   *           * 
     *       * 
       *   * 
         * 
       *   * 
     *       * 
   *           * 
 * * * * * * * * * 
 
 */
#include <iostream>
using namespace std;
int main()
{
    for (int i=0;i<4;i++)
    {
        for (int j=1;j<=i;j++)
        {
          cout<<" ";  
        }
        for(int j=0;j<2*(5-i)-1;j++)
        {
            if (i==0 || j==0 || j==2*(5-i)-2)
            {
                cout<<"*";
            }
            else 
            {
                cout<<" ";
            }
        }
        cout<<endl;
        
        
    }
for (int i=1;i<=5;i++)
        {
            for(int j=1;j<=6-i-1;j++)
            {
                cout<<" ";
            }
            
            for (int j=0;j<2*i-1;j++)
            {
                if(j==0 || i==5 ||j==2*i-2)
                {
                    cout<<"*";
                }
                else
                {
                    cout<<" ";
                }
                
            }
            cout<<endl;
        }
    return 0;
}
